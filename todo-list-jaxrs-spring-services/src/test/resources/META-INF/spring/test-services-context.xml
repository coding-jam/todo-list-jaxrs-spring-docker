<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-3.0.xsd
		http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="epcisIdaServerService"
		class="com.ida.pharma.epcis.serialization.services.EpcisRepositoryInterfaceService">
		<property name="server" value="${ida.epcis.server}" />
	</bean>

	<bean id="boehrigerInterfaceService"
		class="com.ida.pharma.epcis.serialization.boehringer.services.BoehrigerEpcisDocumentInterfaceService">
		<property name="fileWriterService" ref="localFileWriterService" />
		<property name="destinationPath" value="${shipping.destination.path}"></property>
	</bean>

	<bean id="boehrigerReconciliationInterfaceService"
		class="com.ida.pharma.epcis.serialization.boehringer.services.BoehrigerReconciliationInterfaceService">
		<property name="fileWriterService" ref="localFileWriterService" />
		<property name="destinationPath" value="${shipping.destination.path}"></property>
	</bean>

	<bean id="eventDataCommissioning"
		class="com.ida.pharma.epcis.serialization.events.EventDataCommissioning"
		lazy-init="true">
	</bean>

	<bean id="eventDataDecommissioning"
		class="com.ida.pharma.epcis.serialization.events.EventDataDecommissioning"
		lazy-init="true">
	</bean>
	
</beans>
